@{
}

<form asp-action="Seguridad">
    <div class="form-group">
        <label asp-for="Texto">Nombre de usuario</label>
        <input type="text" class="form-control" asp-for="Texto" value="Usuario" />
    </div>
    <button type="submit" class="mt-md-1 btn btn-primary">Mandar</button>
</form>

@if (!string.IsNullOrEmpty(Model.Texto))
{
    <div class="row">
        <p>Salida segura: @(Model.Texto)</p>
    </div>
    <div class="row">
        <p>Salida no segura: @Html.Raw(Model.Texto)</p>
    </div>
}